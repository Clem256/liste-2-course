{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Créer un nouveau article</h1>
            <a href="{{ path('app_article_index') }}" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left"></i> Retour
            </a>
        </div>

        <div class="card p-4 shadow-sm">
            <h5 class="card-title mb-4">Détails de l'article</h5>
            {{ form_start(form) }}
            <div class="row mb-3">
                <div class="col-md-6">
                    {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    {{ form_row(form.price, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.quantity, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    {{ form_row(form.unit, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.type, {'attr': {'class': 'form-select'}}) }}
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    {{ form_row(form.nutriscore, {'attr': {'class': 'form-select'}}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.calorie, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    {{ form_row(form.label, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.categorie, {'attr': {'class': 'form-select'}}) }}
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    {{ form_row(form.image, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success">Sauvegarder</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
